<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frmCreateAccount">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".frmCreateContractor">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".frmCreateCleanerAcc">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="294dp"
                android:layout_marginBottom="183dp"
                android:text="Clear" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="291dp"
                android:layout_marginBottom="272dp"
                android:text="User Type:"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="289dp"
                android:layout_marginBottom="323dp"
                android:text="Confirm Password:"
                android:textAlignment="center"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txtCPassword"
                android:layout_width="233dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="27dp"
                android:layout_marginBottom="322dp"
                android:ems="10"
                android:hint="Re-enter Your Password please"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:textSize="12sp" />

            <Spinner
                android:id="@+id/spUserType"
                android:layout_width="255dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="258dp"
                android:entries="@array/Designation"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="289dp"
                android:layout_marginBottom="511dp"
                android:text="Full Name:"
                android:textAlignment="center"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txtFname"
                android:layout_width="237dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="497dp"
                android:ems="10"
                android:hint="Your First and Last Names only please"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/txtUsername"
                android:layout_width="237dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="438dp"
                android:ems="10"
                android:hint="Your Username please"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="287dp"
                android:layout_marginBottom="453dp"
                android:text="Username:"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="287dp"
                android:layout_marginBottom="402dp"
                android:text="Password:"
                android:textAlignment="center"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txtPassword"
                android:layout_width="233dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="27dp"
                android:layout_marginBottom="382dp"
                android:ems="10"
                android:hint="Your Password please"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="300dp"
                android:layout_marginBottom="17dp"
                android:text="Back" />

            <Button
                android:id="@+id/btnCreateAcc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="17dp"
                android:layout_marginBottom="184dp"
                android:text="CREATE ACCOUNT"
                android:textSize="20sp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>